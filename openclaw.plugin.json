{
  "id": "openclaw-topic-shift-reset",
  "name": "Topic Shift Reset",
  "description": "Detects subject shifts and rotates to a fresh OpenClaw session with optional context handoff.",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },
      "preset": {
        "type": "string",
        "enum": ["conservative", "balanced", "aggressive"],
        "default": "balanced"
      },
      "embedding": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "provider": {
            "type": "string",
            "enum": ["auto", "none", "openai", "ollama"],
            "default": "auto"
          },
          "model": {
            "type": "string"
          },
          "baseUrl": {
            "type": "string"
          },
          "apiKey": {
            "type": "string"
          },
          "timeoutMs": {
            "type": "integer",
            "minimum": 1000,
            "maximum": 30000,
            "default": 7000
          }
        }
      },
      "handoff": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "mode": {
            "type": "string",
            "enum": ["none", "summary", "verbatim_last_n"],
            "default": "summary"
          },
          "lastN": {
            "type": "integer",
            "minimum": 1,
            "maximum": 20,
            "default": 6
          },
          "maxChars": {
            "type": "integer",
            "minimum": 60,
            "maximum": 800,
            "default": 220
          }
        }
      },
      "softSuspect": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "action": {
            "type": "string",
            "enum": ["none", "ask"],
            "default": "ask"
          },
          "prompt": {
            "type": "string",
            "default": "Potential topic shift detected. Ask one short clarification question to confirm the user's new goal before proceeding."
          },
          "ttlSeconds": {
            "type": "integer",
            "minimum": 10,
            "maximum": 1800,
            "default": 120
          }
        }
      },
      "dryRun": {
        "type": "boolean",
        "default": false
      },
      "debug": {
        "type": "boolean",
        "default": false
      },
      "advanced": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "historyWindow": {
            "type": "integer",
            "minimum": 2,
            "maximum": 40,
            "default": 10
          },
          "minHistoryMessages": {
            "type": "integer",
            "minimum": 1,
            "maximum": 30,
            "default": 3
          },
          "minMeaningfulTokens": {
            "type": "integer",
            "minimum": 2,
            "maximum": 60,
            "default": 6
          },
          "minTokenLength": {
            "type": "integer",
            "minimum": 1,
            "maximum": 8,
            "default": 2
          },
          "minSignalChars": {
            "type": "integer",
            "minimum": 1,
            "maximum": 500,
            "default": 20
          },
          "minSignalTokenCount": {
            "type": "integer",
            "minimum": 1,
            "maximum": 60,
            "default": 3
          },
          "minSignalEntropy": {
            "type": "number",
            "minimum": 0,
            "maximum": 8,
            "default": 1.2
          },
          "minUniqueTokenRatio": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.34
          },
          "shortMessageTokenLimit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 40,
            "default": 6
          },
          "embeddingTriggerMargin": {
            "type": "number",
            "minimum": 0,
            "maximum": 0.5,
            "default": 0.08
          },
          "stripEnvelope": {
            "type": "boolean",
            "default": true
          },
          "stripRules": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "dropLinePrefixPatterns": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "dropExactLines": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "dropFencedBlockAfterHeaderPatterns": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              }
            }
          },
          "handoffTailReadMaxBytes": {
            "type": "integer",
            "minimum": 65536,
            "maximum": 8388608,
            "default": 524288
          },
          "softConsecutiveSignals": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4,
            "default": 2
          },
          "cooldownMinutes": {
            "type": "integer",
            "minimum": 0,
            "maximum": 240,
            "default": 5
          },
          "softScoreThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.72
          },
          "hardScoreThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.86
          },
          "softSimilarityThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.36
          },
          "hardSimilarityThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.24
          },
          "softNoveltyThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.58
          },
          "hardNoveltyThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.74
          },
          "ignoredProviders": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          }
        }
      }
    }
  },
  "uiHints": {
    "preset": {
      "label": "Behavior Preset",
      "help": "conservative = fewer resets, balanced = default, aggressive = faster resets."
    },
    "embedding": {
      "label": "Embedding Backend",
      "help": "Set one provider config for embeddings used by this plugin."
    },
    "handoff": {
      "label": "Context Handoff",
      "help": "mode=summary is the safest default; verbatim_last_n copies recent transcript lines."
    },
    "softSuspect": {
      "label": "Soft-Suspect Clarification",
      "help": "When a soft topic-shift signal appears, optionally steer the model to ask one clarification question before proceeding."
    },
    "dryRun": {
      "label": "Dry Run",
      "help": "Only log decisions; do not rotate sessions."
    },
    "debug": {
      "label": "Debug Logs",
      "help": "Emit per-message classifier metrics."
    },
    "advanced": {
      "label": "Advanced Overrides",
      "help": "Optional expert tuning. Leave empty for preset behavior."
    }
  }
}
