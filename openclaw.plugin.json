{
  "id": "openclaw-topic-shift-reset",
  "name": "Topic Shift Reset",
  "description": "Detects subject shifts and rotates to a fresh OpenClaw session with optional context handoff.",
  "configSchema": {
    "type": "object",
    "additionalProperties": true,
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },
      "preset": {
        "type": "string",
        "enum": ["conservative", "balanced", "aggressive"],
        "default": "balanced"
      },
      "embeddings": {
        "type": "string",
        "enum": ["auto", "none", "openai", "ollama"],
        "default": "auto"
      },
      "handoff": {
        "type": "string",
        "enum": ["none", "summary", "verbatim"],
        "default": "summary"
      },
      "dryRun": {
        "type": "boolean",
        "default": false
      },
      "debug": {
        "type": "boolean",
        "default": false
      },
      "advanced": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "historyWindow": {
            "type": "integer",
            "minimum": 2,
            "maximum": 40,
            "default": 10
          },
          "minHistoryMessages": {
            "type": "integer",
            "minimum": 1,
            "maximum": 30,
            "default": 3
          },
          "minMeaningfulTokens": {
            "type": "integer",
            "minimum": 2,
            "maximum": 60,
            "default": 6
          },
          "minTokenLength": {
            "type": "integer",
            "minimum": 1,
            "maximum": 8,
            "default": 2
          },
          "softConsecutiveSignals": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4,
            "default": 2
          },
          "cooldownMinutes": {
            "type": "integer",
            "minimum": 0,
            "maximum": 240,
            "default": 5
          },
          "softScoreThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.72
          },
          "hardScoreThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.86
          },
          "softSimilarityThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.36
          },
          "hardSimilarityThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.24
          },
          "softNoveltyThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.58
          },
          "hardNoveltyThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.74
          },
          "ignoredProviders": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "handoff": {
            "type": "string",
            "enum": ["none", "summary", "verbatim", "verbatim_last_n"]
          },
          "handoffLastN": {
            "type": "integer",
            "minimum": 1,
            "maximum": 20,
            "default": 6
          },
          "handoffMaxChars": {
            "type": "integer",
            "minimum": 60,
            "maximum": 800,
            "default": 220
          },
          "embeddings": {
            "type": "string",
            "enum": ["auto", "none", "openai", "ollama"]
          },
          "embedding": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "provider": {
                "type": "string",
                "enum": ["auto", "none", "openai", "ollama"],
                "default": "auto"
              },
              "model": {
                "type": "string"
              },
              "baseUrl": {
                "type": "string"
              },
              "apiKey": {
                "type": "string"
              },
              "timeoutMs": {
                "type": "integer",
                "minimum": 1000,
                "maximum": 30000,
                "default": 7000
              }
            }
          }
        }
      }
    }
  },
  "uiHints": {
    "preset": {
      "label": "Behavior Preset",
      "help": "conservative = fewer resets, balanced = default, aggressive = faster resets."
    },
    "embeddings": {
      "label": "Embeddings",
      "help": "auto uses whichever embedding backend your instance already has configured."
    },
    "handoff": {
      "label": "Context Handoff",
      "help": "summary keeps transitions transparent without copying full transcript."
    },
    "dryRun": {
      "label": "Dry Run",
      "help": "Only log decisions; do not rotate sessions."
    },
    "debug": {
      "label": "Debug Logs",
      "help": "Emit per-message classifier metrics."
    },
    "advanced": {
      "label": "Advanced Overrides",
      "help": "Optional expert tuning. Leave empty for preset behavior."
    }
  }
}
