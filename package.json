{
  "name": "openclaw-topic-shift-reset",
  "version": "0.2.0",
  "description": "OpenClaw plugin that detects topic shifts and starts a fresh session automatically.",
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "src",
    "openclaw.plugin.json",
    "README.md",
    "docs",
    "LICENSE"
  ],
  "scripts": {
    "build": "echo 'No build required. OpenClaw loads src/index.ts via jiti.'",
    "dev": "echo 'No watch build required.'",
    "prepack": "npm run build"
  },
  "keywords": [
    "openclaw",
    "plugin",
    "session",
    "topic-shift"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "peerDependencies": {
    "openclaw": ">=2026.2.18"
  },
  "openclaw": {
    "extensions": [
      "./src/index.ts"
    ]
  }
}
